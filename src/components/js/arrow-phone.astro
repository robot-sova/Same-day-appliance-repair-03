<!-- стрелка левого меню для телефона -->
<script defer>
  document.addEventListener("DOMContentLoaded", function () {
    var openFullLeft = document.querySelector(".open-full_left");
    var fullLeftMenu = document.querySelector(".full_left_menu_r");
    var leftClose = document.getElementById("arrow-left-menu");

    openFullLeft.addEventListener("click", function () {
      fullLeftMenu.classList.toggle("menu-LeftOpen");
      openFullLeft.classList.toggle("menu-LeftOpen");
      leftClose.classList.toggle("menu-LeftOpen");
    });
  });
</script>
